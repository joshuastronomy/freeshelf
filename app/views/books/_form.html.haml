= form_for @book do |f|
  - if @book.errors.any?
    #error_explanation
      %h2
        = pluralize(@book.errors.count, "error")
        prohibited
        this book from being saved:
      %ul
        - @book.errors.full_messages.each do |msg|
          %li= msg
  %p
    = f.label :Title
    %br/
    = f.text_field :title
  %p
    = f.label :Author
    %br/
    = f.text_field :author
  %p
    = f.label :Description
    %br/
    = f.text_area :description
  %p
    = f.label :url, "URL"
    %br/
    = f.text_field :url
  %p
    = f.submit
